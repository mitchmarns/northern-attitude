<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/pages/characters.css">
</head>
<body>
  <div class="container">
    <h1 class="text-center"><%= title %></h1>

    <% if (characters.length > 0) { %>
      <div class="character-list">
        <% characters.forEach(character => { %>
          <div class="character-card">
            <div class="character-image">
              <img src="<%= character.url || '/img/default-character.png' %>" alt="<%= character.name %>" class="character-avatar" onerror="this.onerror=null; this.src='/img/default-character.png';">
            </div>
            <h2><%= character.name %></h2>
            <p><strong>Age:</strong> <%= character.age || '—' %></p>
            <p><strong>Position:</strong> <%= character.position || '—' %></p>
            <p><strong>Team:</strong> <%= character.team ? character.team : 'Not specified' %></p>
            <a href="/characters/<%= character.id %>" class="btn btn-primary">View Profile</a>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center">No characters found.</p>
    <% } %>
    
    <div class="text-center mt-4">
      <a href="/characters/create" class="btn btn-success">Create New Character</a>
    </div>
  </div>
</body>
</html>