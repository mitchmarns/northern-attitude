<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/pages/characters.css">
</head>
<body>
  <div class="container">
    <h1 class="text-center"><%= title %></h1>

    <% if (characters.length > 0) { %>
      <div class="character-list">
        <% characters.forEach(character => { %>
          <div class="character-card">
            <% if (character.url) { %>
              <div class="character-image">
                <img src="<%= character.url %>" alt="<%= character.name %>" class="character-avatar">
              </div>
            <% } else { %>
              <div class="character-image">
                <img src="/images/default-avatar.png" alt="Default Avatar" class="character-avatar">
              </div>
            <% } %>
            <h2><%= character.name %></h2>
            <p><strong>Age:</strong> <%= character.age %></p>
            <p><strong>Position:</strong> <%= character.position %></p>
            <p><strong>Team:</strong> <%= character.team %></p>
            <a href="/characters/<%= character.id %>" class="btn btn-primary">View Profile</a>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center">No characters found.</p>
    <% } %>
  </div>
</body>
</html>